module Final_Permutation (
  input wire left_half[32],
  input wire right_half[32],
  output wire output_text[64]
);

    // DES IP^-1 (Inverse IP) table
    CONSTANT FP_TABLE[64] = {
        40, 8, 48, 16, 56, 24, 64, 32,
        39, 7, 47, 15, 55, 23, 63, 31,
        38, 6, 46, 14, 54, 22, 62, 30,
        37, 5, 45, 13, 53, 21, 61, 29,
        36, 4, 44, 12, 52, 20, 60, 28,
        35, 3, 43, 11, 51, 19, 59, 27,
        34, 2, 42, 10, 50, 18, 58, 26,
        33, 1, 41, 9,  49, 17, 57, 25
    }
    
    PROCESS:
        // Combine right and left (swap them)
        combined[64] = {right_half[32], left_half[32]}
        
        // Apply inverse permutation
        FOR i = 0 TO 63 DO
            output_text[i] = combined[FP_TABLE[i] - 1]
        END FOR
        
        RETURN output_text
endmodule
